<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/discuss_userimage"
        android:layout_width="@dimen/header_image"
        android:layout_height="@dimen/header_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />
    <TextView
        android:id="@+id/discuss_userid"
        android:layout_below="@id/discuss_userimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/discuss_content"
        android:layout_toRightOf="@id/discuss_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</android.support.percent.PercentRelativeLayout>